/* pages/index/index.wxss */
/* 轮播图 */
.banner {
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 五个图标导航区  */
.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.iconfont{
width: 100rpx;
height: 100rpx;
border-radius: 50%;
text-align: center;
line-height: 100rpx;
color: #fff;
font-size: 50rpx;
margin: 20rpx 0;
background-color: rgb(240,19,19);
}

/* 推荐歌曲区域 */
.recommendScroll{
  display: flex;
  height: 280rpx;
}

/* 头部 */
.recommendContainer{
  padding: 20rpx;
}

/* 内容区域 */
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text {
  font-size: 26rpx;
  display: block;
  /* 单行文本溢出隐藏，省略号代替 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出隐藏，省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;/* 纵向对齐*/
  -webkit-line-clamp:2;
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 400rpx;
}
/* 内容 */
.swiperItem{
  width: 96%;
  background: #fbfbfb;
  
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
  /* height: 100rpx; */
}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素 */
  display: flex;
  margin-top: 20rpx;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
} 
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}