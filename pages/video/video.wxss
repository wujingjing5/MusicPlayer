/* 头部 搜索框 */
.videoContainer .header{
  display: flex;
  padding: 10rpx;

}
.videoContainer .header .search{
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin: 0 10rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #d43c33;
  text-align: center;
  flex: 1;
}
.videoContainer .header image {
width: 60rpx;
height: 60rpx;
}

/* 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 66rpx;
}

.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}
.navItem .active{
  border-bottom: 6rpx solid #d43c33;
}

/* 视频列表样式 */
.videoScroll {
  margin-top: 10rpx;
  /* calc: 可以动态计算css的宽高， 运算符左右两侧必须加空格，否则计算会失效 */
  /* 视口单位： vh vw  1vh = 1%的视口高度  1vw = 1%的视口宽度*/
  height: calc(100vh - 152rpx);
  /* 用来测试页面上拉触底 */
  /* height: calc(100vh - 100rpx);  */
}
.videoItem {
  padding: 0 3%;
}
